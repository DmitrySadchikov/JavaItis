<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <import resource="connection.xml"/>
    <bean id="usersDao" class="ru.itis.dao.UsersDaoJdbcImpl">
        <constructor-arg ref="namedParameterJdbcTemplate"></constructor-arg>
    </bean>
    <bean id="userService" class="ru.itis.services.UserServiceImpl">
        <constructor-arg ref="usersDao"></constructor-arg>
    </bean>

    <bean id="carsDao" class="ru.itis.dao.CarsDaoJdbcImpl">
        <constructor-arg ref="namedParameterJdbcTemplate"></constructor-arg>
    </bean>
    <bean id="carService" class="ru.itis.services.CarServiceImpl">
        <constructor-arg ref="carsDao"></constructor-arg>
    </bean>

</beans>